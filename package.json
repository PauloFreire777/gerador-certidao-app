{
  "name": "certidao-pro-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Versão desktop portátil do sistema CertidãoPRO.",
  "author": "Seu Nome Aqui",
  "main": "electron.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:serve": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@sparticuz/chromium": "^111.0.0",
    "lucide": "^0.263.1",
    "puppeteer-core": "^19.11.1",
    "vue": "^3.2.13"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.certidaopro.app",
    "productName": "CertidãoPRO",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    }
  }
}
